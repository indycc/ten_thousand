!!!
%html
  %head
    %title
      \&#x2182
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #container
      - flash.each do |key, value|
        %div{:class => "flash #{key}"}
          = value
      #header
        %h1
          %a{:href => root_url(:noredir => true)}
            %abbr{:title => '10,000!'}
              \&#x2182;
        %h2
          Learn how to do anything!
        #menu
          %ul
            - if current_user?
              %li
                %a{:href => expertises_path}<>
                  Expertises
              %li
                %a{:href => practice_logs_path}<>
                  Practice Logs
            - else
              %li#login_menu
                Login:
                %ul#login_methods
                  %li#login_twitter
                    %a{:href => '/auth/twitter'}<>
                      Twitter
            %li
              %form{:action => 'TODO', :method => 'GET'}
                %input#searchbox{:type => 'text', :name => 'q', :placeholder => 'What do you want to learn?'}
                %input#searchbutton{:type => 'submit', :value => '>>'}
      #content
        =yield
