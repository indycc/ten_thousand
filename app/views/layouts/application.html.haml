!!!
%html
  %head
    %title
      \&#x2182
    = stylesheet_link_tag 'common', 'app'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #container
      #nav-header
        #logo
          %a{:href => dashboard_path}
            10,000
        #nav-left
          .nav-item
            %a{:href => expertises_path}
              expertises
          .nav-item
            %a{:href => practice_logs_path}
              practice
        #nav-right
          .nav-item
            %a{:href => logout_path}
              sign out
      #practice_log_entry
        =form_for :practice_log, :url => practice_logs_path do |f|
          =f.text_field :occurred_on, :placeholder => 'Date', :value => Date.today
          =f.select :expertise_id, Expertise.all.collect { |p| [p.name, p.id] }
          =f.text_field :duration, :placeholder => 'Minutes or Hours:Minutes'
          =f.submit 'Log it!'

      #content
        - flash.each do |key, value|
          %div{:class => "flash #{key}"}
            = value
        =yield
