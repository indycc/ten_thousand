= form_for(@expertise) do |f|
  -if @expertise.errors.any?
    #error_explanation
      %h2
        = t('ccicc.errors.summary', :count => @expertise.errors.count, :type => Expertise.human_name.downcase)
      %ul
      -@expertise.errors.full_messages.each do |msg|
        %li
          = msg

  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :color
    %br/
    = f.text_field :color
  .actions
    = f.submit
